<%= form_with(model: paciente) do |form| %>

  <% if paciente.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(paciente.errors.count, "error") %> prohibited this paciente from being saved:</h2>
      <ul>
        <% paciente.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="container col-6">
    <div>
      <%= form.label :nome_completo, style: "display: block" %>
      <%= form.text_field :nome_completo , class:"form-control "%>
    </div>

    <div>
      <%= form.label :data_nascimento, style: "display: block" %>
      <%= form.date_field :data_nascimento, class:"form-control"%>
    </div>

    <div>
      <%= form.label :cpf, style: "display: block" %>
      <%= form.number_field :cpf , class:"form-control"%>
    </div>

    <div>
      <%= form.label :email, style: "display: block" %>
      <%= form.text_field :email , class:"form-control"%>
    </div>

    <%= form.fields_for :endereco do |u| %>
      <div>
        <%= u.label :cep, style: "display: block" %>
        <%= u.number_field :cep , class:"form-control"%>
      </div>

      <div>
        <%= u.label :cidade, style: "display: block" %>
        <%= u.text_field :cidade , class:"form-control"%>
      </div>

      <div>
        <%= u.label :bairro, style: "display: block" %>
        <%= u.text_field :bairro , class:"form-control"%>
      </div>

      <div>
        <%= u.label :logradouro, style: "display: block" %>
        <%= u.text_field :logradouro , class:"form-control"%>
      </div>

      <div>
        <%= u.label :complemento, style: "display: block" %>
        <%= u.text_field :complemento , class:"form-control"%>
      </div>
    <% end %>

    <div class="actions mt-3 ">
      <%= form.submit class:"btn btn-primary"%>
    </div>
  </div>
<% end %>
