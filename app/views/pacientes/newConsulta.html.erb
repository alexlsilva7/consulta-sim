<div class="container-fluid text-center">
  <h2>Novo Consulta</h2>
  <p>Paciente: <%= @paciente.nome_completo %> </p>
</div>


<div class="container col-6">

  <%= form_with model: [@paciente, @paciente.consultums.build] do |form| %>
    <div class="container row">
      <div class="mr-3">
        <%= form.label :data, style: "display: block" %>
        <%= form.date_field :data , class:"form-control"%>
      </div>

      <div>
        <%= form.label :horario, style: "display: block" %>
        <%= form.time_field :horario , class:"form-control"%>
      </div>
    </div>

    <div>
      <%= form.label :medico_id, style: "display: block" %>
      <%= form.collection_select(:medico_id, Medico.all, :id, :nome_completo,{:selected => @consultum.medico_id},class:"form-control")%>
    </div>

    <div class="actions">
      <%= form.submit  class: "btn btn-primary mt-3"%>
    </div>

    <%= link_to "Back to paciente", paciente_path(@paciente) , class: "btn btn-primary my-3"%>
  <% end %>

</div>
